{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "exclude": [
    "./node_modules",
    "__tests__",
    "@types",
    "jest.config.js"
  ]
}
